<% layout("/layouts/boilerplate") %>


    <h3 class="class col-6   offset-3 mt-3 col sm-4">SignUp on Wanderlust </h3>
    <div class="row ">
        <div class="class col-6 offset-3 col sm-4">


            <form action="/signup" method="post" novalidate class="needs-validation">
                <div class="mt-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" class="form-control" required>
                    <div class="invalid-feedback">Please Enter the username</div>
                    <div class="valid-feedback">username looks good</div>
                </div>
                <div class="mt-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" name="email" class="form-control" required>
                    <div class="invalid-feedback">Please Enter the email</div>
                    <div class="valid-feedback">email looks good</div>
                </div>
                <div class="mt-3">
                    <label for="password" class="form-label">password</label>
                    <input type="password" name="password" class="form-control" required>
                    <div class="invalid-feedback">Please Enter the password</div>
                    <div class="valid-feedback">strong</div>
                </div>
                <button  class="btn btn-success mt-3">Signup</button>



            </form>

            <div>
                <form action="/login" method="POST">
                  <!-- Existing local login form -->
                </form>
                <a href="/auth/google">
                  <button type="button">Login with Google</button>
                </a>
              </div>
        </div>
    </div>