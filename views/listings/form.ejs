<% layout("/layouts/boilerplate") %>

    <body>
        <h3>Create New ::</h3>
        <div class="row ">
            <div class="class col-9 col sm-4">


                <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mt-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" placeholder="Enter the Title" class="form-control"
                            required>
                        <div class="invalid-feedback">Please Enter the Title</div>
                        <div class="valid-feedback">Title looks good</div>
                    </div>

                    <div class="mt-3">
                        <label for="description" class="form-label">description</label>
                        <textarea name="listing[description]" placeholder="Enter the description" class="form-control"
                            required> </textarea>
                        <div class="invalid-feedback">Description should be valid</div>

                    </div>
                    <div class="mt-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" name="listing[image]"  class="form-control">

                    </div>


                    <div class="mt-3">
                        <label for="price" class="form-label">price</label>
                        <input type="text" name="listing[price]" placeholder="Enter the price" class="form-control"
                            required>
                        <div class="invalid-feedback">Price should be valid</div>

                    </div>
                    <div class="row mt-3">

                        <div class="col-4">
                            <label for="country" class="form-label">Country</label>
                            <input type="text " name="listing[country]" placeholder="Enter the country"
                                class="form-control" required>
                            <div class="invalid-feedback">Country should be valid</div>

                        </div>

                        <div class="col-8 ">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" name="listing[location]" placeholder="Enter the Location"
                                class="form-control" required>
                            <div class="invalid-feedback">Location should be Valid</div>

                        </div>
                        
                    <div class="mt-3">
                        <label for="Category" class="form-label">Category</label>
                        <input type="text" name="listing[category]" placeholder="Enter the Category" class="form-control"
                            required>
                        <div class="invalid-feedback">Category should be valid</div>

                    </div>



                    </div>
                    <br>


                    <button class="btn add-btn mt-4 ">Add</button>
                </form>


            </div>
        </div>
    </body>